<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.study.jasmin.jasmin.ui.activity.SendCustomerCenterActivity2">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="이메일"
        android:id="@+id/send_customer_center2_email"
        android:layout_row="0"
        android:layout_column="0" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:id="@+id/send_customer_center2_edit_email"
        android:layout_row="0"
        android:layout_column="1"
        android:layout_marginLeft="10dp"
        android:hint="답변받을 이메일 주소"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="제목"
        android:id="@+id/send_customer_center2_title"
        android:layout_row="1"
        android:layout_column="0"
        android:layout_marginTop="10dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/send_customer_center2_edit_title"
        android:layout_row="1"
        android:layout_column="1"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:hint="제목"
        android:inputType="text"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textMultiLine"
        android:ems="10"
        android:id="@+id/send_customer_center2_edittext"
        android:layout_row="2"
        android:layout_column="0"
        android:layout_columnSpan="2"
        android:hint="문의내용" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="보내기"
        android:id="@+id/btn_send"
        android:layout_row="3"
        android:layout_column="0"
        android:layout_columnSpan="2" />
</GridLayout>

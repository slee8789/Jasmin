<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/notice_group_title"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:text="@string/notice_group"
            android:textSize="25sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/notice_group_number"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/notice_group_title"
            android:gravity="center"
            android:text="0"
            android:textSize="25sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/notice_group_order_literal"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/notice_group_order_number"
            android:gravity="center"
            android:src="@drawable/ic_close_black_24dp" />

        <ImageView
            android:id="@+id/notice_group_order_number"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/notice_group_write"
            android:gravity="center"
            android:src="@drawable/ic_close_black_24dp" />

        <ImageView
            android:id="@+id/notice_group_write"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:src="@drawable/ic_close_black_24dp" />


    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#cccccc"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/notice_no_header"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/notice_no"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/notice_title_header"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="4"
            android:gravity="center"
            android:text="@string/notice_title"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/notice_date_header"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="2"
            android:gravity="center"
            android:text="@string/notice_date"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/notice_writer_header"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="2"
            android:gravity="center"
            android:text="@string/notice_writer"
            android:textSize="20sp" />


    </LinearLayout>


</LinearLayout>


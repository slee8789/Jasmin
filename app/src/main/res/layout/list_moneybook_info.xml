<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/notice_layout"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/moneybook_name"
        android:layout_weight="2"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:gravity="center"
        android:text="주결경"
        android:textColor="@color/colorBlack"
        android:textSize="20sp" />


    <TextView
        android:id="@+id/moneybook_date"
        android:layout_weight="2"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_toRightOf="@+id/moneybook_name"
        android:gravity="center"
        android:text="16/06/28"
        android:textColor="@color/colorBlack"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/moneybook_reason"
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_toRightOf="@+id/moneybook_date"
        android:gravity="center"
        android:text="지각"
        android:textColor="@color/colorBlack"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/moneybook_money"
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_toRightOf="@+id/moneybook_reason"
        android:gravity="center"
        android:text="3000"
        android:textColor="@color/colorBlack"
        android:textSize="20sp" />

</LinearLayout>
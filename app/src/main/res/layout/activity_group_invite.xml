<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground"
    tools:context="com.study.jasmin.jasmin.ui.activity.GroupInviteActivity">

    <TextView
        android:id="@+id/invite_msg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:gravity="center"
        android:text="@string/invite_msg"
        android:textSize="20dp" />

    <Button
        android:id="@+id/link"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_below="@id/invite_msg"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/round_bora"
        android:drawableLeft="@drawable/ic_link_white_24dp"
        android:paddingLeft="10dp"
        android:text="@string/invite_link"
        android:textColor="@color/colorWhite"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/link"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="30dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/invite_sms"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:drawableTop="@drawable/ic_chat_bubble_outline_black_24dp"
            android:gravity="center"
            android:text="@string/invite_SMS" />

        <TextView
            android:id="@+id/invite_kakao"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:drawableTop="@drawable/ic_chat_bubble_black_24dp"
            android:gravity="center"
            android:text="@string/kakaotalk" />

        <TextView
            android:id="@+id/invite_mail"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:drawableTop="@drawable/ic_mail_outline_black_24dp"
            android:gravity="center"
            android:text="@string/login_email" />


    </LinearLayout>

    <Button
        android:id="@+id/btn_complete"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/round_green"
        android:text="@string/complete"
        android:textColor="@color/colorWhite"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="20dp"
        android:textStyle="bold" />

</RelativeLayout>
